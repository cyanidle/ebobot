<launch>

<arg name="port" default="/dev/ttyACM0"/>
<arg name="arduino_baud" default="57600"/>
<arg name="debug" default="0"/>
<arg name="footprint_radius" default="0.10"/>

<node pkg="rosserial_arduino" type="serial_node.py" name="arduino_serial_node" respawn="true" respawn_delay="10">
        <param name="port" value="$(arg port)"/>
        <param name="baud" value="$(arg arduino_baud)"/>
    </node>
    <node pkg="ebobot" type="motors_info_callback.py" name="motors_info_callback" output="log" respawn="true" respawn_delay="10"> 
        <param name = "debug" value = "$(arg debug)"/>
        <param name = "footprint_radius" value = "$(arg footprint_radius)"/>
    </node>
    <node pkg="ebobot" type="pid_setter.py" name="pid_setter">
        <param name = "path" value = "$(find ebobot)/config/pid_settings.txt"/>
    </node>
    <node pkg="ebobot" type="servos_setter.py" name="servos_setter">
        <param name = "file" value = "$(find ebobot)/config/servos.yaml"/>
    </node>
</launch>